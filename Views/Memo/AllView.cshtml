    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">

                <div class="blog-icon">
                    <i class="fa fa-book fa-4x"></i>
                </div>
                <div class="blog-title">
                    <h1>View All Memo's</h1>
                </div>

            </div>     <!-- End col-lg-12 -->
        </div>	    <!-- End row -->
    </div>       <!-- End container -->
