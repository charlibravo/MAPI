@{
    ViewBag.Title = "Ewallet";
    Layout = "~/Views/Sheared/_LayoutPage1.cshtml";
}

<!-- Start Blog Banner
      ==================================== -->
<section id="blog-banner">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">

                <div class="blog-icon">
                    <i class="fa fa-book fa-4x"></i>
                </div>
                <div class="blog-title">
                    <h1>E-Wallet</h1>
                </div>

            </div>     <!-- End col-lg-12 -->
        </div>	    <!-- End row -->
    </div>       <!-- End container -->
</section>    <!-- End Section -->
<!-- Start Blog Post Section
==================================== -->
<section id="blog-page">
    <div class="container">
        <div class="row">

            <div class="container">
                <h2>Enter Email And Paswword</h2>
                <form>
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input type="email" class="form-control" id="e" placeholder="Enter email">
                    </div>
                    <div class="form-group">
                        <label for="pwd">Password:</label>
                        <input type="password" class="form-control" id="pwd" placeholder="Enter password">
                    </div>
                    <div class="checkbox">
                        <label><input type="checkbox">Remember me</label>
                    </div>
                    <button type="submit" class="btn btn-transparent" id="Save">Save</button>
                    <button type="submit" class="btn btn-transparent" id="All">ViewAll</button>
                    <button type="submit" class="btn btn-transparent" id="clear">Clear</button>

                </form>

            </div>


        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Password</th>
                </tr>
            </thead>
            <tbody id="my-tbl-tr">
            </tbody>
        </table>
    </div>


</section>
<script lang="ja" type="text/javascript">
    $(document).ready(function () {
        $("#Save").click(function () {

            var e = $("#e").val();
            var p = $("#pwd").val();
            $.ajax({
                url: "/api/EWalletapi",
                type: "Post",
                data: JSON.stringify({ Email: e, Password: p }),
                contentType: 'application/json; charset=utf-8',
                success: function (data) { },
                error: function (msg) { alert('error');}
            });
        });
    });
$(document).ready(function () {

    // code to read selected table row cell data (values).
    $(document).on('click', '#All', function (e) {
        $("#EWallet").hide();
        var currentRow = $(this).closest("tr");
        var id = currentRow.find("td:eq(0)").text(); // get current row 1st TD value
        $('#my-tbl-tr').empty();
        var data = id;+
        $.ajax({
            type: 'GET',
            url: "/api/ewalletapi" + data,
            dataType: 'json',
            success: function (response) {
                for (i = 0; i < response.length; i++) {
                    var str = "<tr><td>" + response[i].Email + "</td>" + "<td>" + response[i].Password + "</td></tr>";
                    $("#my-tbl-tr").append(str);
                }
            },
            error: function (msg) { console.log(msg); alert("Error");}
        });
        e.preventDefault();
    });

});
</script>





